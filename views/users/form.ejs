<%- include('../../components/header.ejs') %>
    <div class="container d-flex justify-content-center align-items-center">

        <div class="row w-100">

            <div class="col-lg-6 col-md-8 col-sm-10 col-xxl-4">
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">Registro de usuarios</h5>
                        <form method="post" action="">
                            <% if (errors) { %>
                                <div class="alert alert-warning">
                                    <%= errors.message%>
                                </div>
                                <% } %>
                                    <div class="mt-2">
                                        <label>Nombre de usuario</label>
                                        <input required class="form-control" type="text" name="username"
                                            placeholder="Nombre de usuario" value="<%=user && user.username %>">
                                        <%if (errors?.username) {%>
                                            <div class="error-label">
                                                Por favor ingrese un username
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="mt-2">
                                        <label>Email</label>
                                        <input required class="form-control" type="email" name="email"
                                            placeholder="Email" value="<%=user && user.email %>">
                                        <%if (errors?.email) {%>
                                            <div class="error-label">
                                                Por favor ingrese un email
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="mt-2"></div>
                                    <label>Password</label>
                                    <input required class="form-control" type="password" name="password"
                                        placeholder="Ingrese la contraseña">
                                    <%if (errors?.password) {%>
                                        <div class="error-label">
                                            Por favor ingrese una contraseña
                                        </div>
                                        <% } %>
                                            <div class="mt-2">
                                                <input class="btn btn-primary" type="submit" value="Enviar">
                                            </div>
                                  
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../components/footer.ejs') %>