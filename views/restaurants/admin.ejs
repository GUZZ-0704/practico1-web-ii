<%- include('../../components/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card mt-3">
                <div class="card-body">
                    <div class="card-title">
                        <h3>Lista de Restaurantes</h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-dark">
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Descripción</th>
                                    <th>Imagen</th>
                                    <th>Dirección</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% restaurants.forEach(restaurant => { %>
                                    <tr>
                                        <td>
                                            <%= restaurant.id %>
                                        </td>
                                        <td>
                                            <%= restaurant.name %>
                                        </td>
                                        <td>
                                            <%= restaurant.description %>
                                        </td>
                                        <td>
                                            <% if (restaurant.image) { %>
                                                <img src="/images/profile/<%= restaurant.id %>.jpg" alt="<%= restaurant.name %>" style="max-width: 100px;">
                                            <% } else { %>
                                                No image
                                            <% } %>
                                        </td>
                                        <td>
                                            <%= restaurant.address %>
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" href="/restaurants/<%= restaurant.id %>/edit">Editar</a>
                                        </td>
                                        <td>
                                            <form method="post" action="/restaurants/<%= restaurant.id %>/delete" onsubmit="return confirm('¿Está seguro que desea eliminar?')">
                                                <input class="btn btn-danger" type="submit" value="Eliminar">
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../components/footer.ejs') %>
