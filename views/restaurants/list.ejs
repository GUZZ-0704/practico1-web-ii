<%- include('../../components/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card mt-3">
                <div class="card-body">
                    <div class="card-title">
                        <h3 class="text-center">Restaurantes</h3>
                    </div>
                    <div class="row">
                        <% if (restaurants && restaurants.length > 0) { %>
                            <% restaurants.forEach(function(restaurant) { %>
                                <div class="col-md-4 mb-4">
                                    <div class="card shadow-sm">
                                        <div class="card-img-container">
                                            <img src="/images/profile/<%= restaurant.id %>.jpg" class="card-img-top" alt="Imagen de <%= restaurant.name %>">
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title"><%= restaurant.name %></h5>
                                            <p class="card-text text-muted">Direcci√≥n: <%= restaurant.address %></p>
                                            <p class="card-text"><%= restaurant.description %></p>
                                            <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary w-100">Ver Hamburguesas</a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="col-12">
                                <p class="text-center">No hay restaurantes disponibles.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../components/footer.ejs') %>
