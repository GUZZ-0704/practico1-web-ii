<%- include('../../components/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card mt-3 shadow-lg">
                <div class="card-body">
                    <div class="card-title">
                        <h3 class="text-center mb-4">Hamburguesas</h3>
                    </div>
                    <div class="row">
                        <% if (burgers && burgers.length > 0) { %>
                            <% burgers.forEach(function(burger) { %>
                                <div class="col-md-4 mb-4">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-img-container">
                                            <img src="/images/profile/<%= burger.image %>" class="card-img-top" alt="Image of <%= burger.name %>" style="height: 200px; object-fit: cover;">
                                        </div>
                                        <div class="card-body d-flex flex-column">
                                            <h5 class="card-title text-center text-primary"><%= burger.name %></h5>
                                            <p class="card-text text-center text-muted">
                                                <strong>Restaurant:</strong> 
                                                <%= burger.restaurant ? burger.restaurant.name : 'No restaurant available' %>
                                            </p>                                            
                                            <p class="card-text text-center"><strong>Price:</strong> $<%= Number(burger.price).toFixed(2) %></p>
                                            <div class="mt-auto">
                                                <a href="/burgers/<%= burger.id %>/restaurant/<%= burger.restaurantId%>" class="btn btn-outline-primary w-100">View Burger Details</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="col-12">
                                <p class="text-center">No hay anvorguesas en este momento.</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../components/footer.ejs') %>
